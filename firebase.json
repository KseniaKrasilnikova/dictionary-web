{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/data/words.json",
        "destination": "/data/words.json"
      },
      {
        "source": "/data/audio/*.mp3",
        "destination": "/data/audio"
      }
    ]
  }
}
